{{#each allNominees.MoviesList}}

<div class="year-container">
  <h2 class="year-heading" index="{{@index}}" data-object="year">{{this.Year}}</h2>
   
      {{#each this.Movies}}
        <div class="movie-container">
          <div class="movie-poster-comtainer">
              <a href="https://imdb.com/{{this.ImdbID}}" target="_blank"> <img class="movie-poster" data-object="{{this.Name}}-{{../this.Year}}-poster" src="/assets/poster-placeholder.jpg" /></a>

              <a href="https://www.youtube.com/results?search_query={{this.Name}}+{{../this.Year}}+trailer" target="_blank"><i class="fab fa-youtube"></i></a>
        </div>

          <div class="movie-content-container">
              <h3 class="movie-title" index="{{@index}}">{{this.Name}} </h3>
               <div class="imdb-container">
                  <span class="imdb-star">&#x2605;</span> 
                 <span class="imdb-rating" data-object="{{this.Name}}-{{../this.Year}}-rating"></span> 
              </div>

              {{#each this.Viewers}}
                  <div class="user-container">
                      <div class="user-info user-name">{{this.Name}}</div>
                      <div class="user-info user-check"> 
                        <input id="checkbox-seen-{{../this.Name}}-{{this.Name}}" class="checkbox-custom" name="checkbox-seen-{{../this.Name}}-{{this.Name}}" type="checkbox" movie-index="{{@../index}}" year-index="{{@../../index}}" {{#if this.HasSeen}}checked{{/if}}>
                             <label for="checkbox-seen-{{../this.Name}}-{{this.Name}}" class="checkbox-custom-label check-label"></label>
                        </div>
                      <div class="user-info user-smile">
                            <input id="radio-1" class="radio-custom" name="radio-group" type="radio" movie-index="{{@../index}}" year-index="{{@../../index}}" {{#if this.HasSkip}}checked{{/if}}>
                             <label for="radio-1" class="radio-custom-label smile-label"></label>
                      </div>
                      <div class="user-info user-frown">
                           <input id="radio-2" class="radio-custom" name="radio-group" type="radio" movie-index="{{@../index}}" year-index="{{@../../index}}" {{#if this.HasSkip}}checked{{/if}}>
                             <label for="radio-2" class="radio-custom-label frown-label"></label>
                      </div>
                      <div class="user-info user-skip">
                            <input id="checkbox-skip-{{../this.Name}}-{{this.Name}}" class="checkbox-custom" name="checkbox-skip-{{../this.Name}}-{{this.Name}}" type="checkbox" movie-index="{{@../index}}" year-index="{{@../../index}}" {{#if this.HasSkip}}checked{{/if}}>
                            <label for="checkbox-skip-{{../this.Name}}-{{this.Name}}" class="checkbox-custom-label skip-label"></label>
                      </div>  
                 </div>
              {{/each}}
            </div>
         </div>  
      {{/each}}

</div>

{{/each}}
